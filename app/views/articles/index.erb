<div class="container">
  <div class="valign-wrapper">
    <div class="valign">
      <h1>All articles</h1>
    </div>
    <div class="valign">
      <%= link_to new_article_path, class:"btn-floating btn-large waves-effect waves-light red" do %><i class="mdi-content-add"></i><% end %>
    </div>
  </div>

  <div class="row">
    <div class="col s12 m12 l12">
      <% @articles.each do |article| %>
        <div class="col s12 m6 l4">
          <div class="card">
            <div class="card-image">
              <%= image_tag article.image.url(:large) %>
              <span class="card-title"><%= link_to article.title, article %></span>
            </div>
            <div class="card-content">
              <p><%= article.summary %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= will_paginate @articles, inner_window: 1 %>
</div>